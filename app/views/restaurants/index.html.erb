<%= link_to "Create new restaurant", new_restaurant_path  %>

<h1>Restaurants</h1>

<div class="row">
  <%@restaurants.each do |restaurant| %>
    <div class="col-sm-4">
      <div class="card">
        <%= restaurant.name %>
        <br>
        <%= restaurant.address %>
        <br>
        <%= restaurant.category %>
        <br>
        <%= link_to 'Show', restaurant %>
      </div>
    </div>
  <% end %>
</div>

